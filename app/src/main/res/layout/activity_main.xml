<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aws Face Rekognition"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewSource"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_background"/>
            <Button
                android:id="@+id/sourceImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upload"
                android:layout_gravity="center"/>
        </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/icEqual"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:src="@drawable/ic_equal"/>
    <ImageView
        android:id="@+id/icNotEqual"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:src="@drawable/ic_not_equal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewTarget"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_background"/>
            <Button
                android:id="@+id/targertImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upload"
                android:layout_gravity="center"/>
        </LinearLayout>

    <Button
        android:id="@+id/buttonTest"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="test"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>